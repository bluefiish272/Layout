@{
    ViewData["Title"] = "登入";
}

<div class="base-container">
    <form id="loginForm" class="base-form-border" asp-controller="Login" asp-action="Login">
        <div class="text-center">請先登入</div>
        <hr />
        <div class="form-group row">
            <label for="loginAccount" class="col-3 col-form-label text-center">帳號</label>
            <div class="col-8">
                <input type="text" class="form-control" id="account">
            </div>
        </div>
        <div class="form-group row">
            <label for="loginPassword" class="col-3 col-form-label text-center">密碼</label>
            <div class="col-8">
                <input type="password" class="form-control" id="password">
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success">登入</button>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#signUpView">註冊</button>
        </div>
    </form>
</div>

<div class="modal fade" id="signUpView" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <partial name="SignUp" />
        </div>
    </div>
</div>

